@model IEnumerable<Tennis>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>My Tennis sessions</h1></br>
<h6>Click respective timeslot to cancel your booking</h6></br>

@foreach (var item in Model)
{
    <div class="row mb-3 text-center">
        <div class="col-2">@item.Day</div>
        @if (@item.NineToElevenId == item.AppUserId)
        {
            <div class="col-2"><a asp-controller="Tennis" asp-action="RemoveBooking9To11" asp-route-id="@item.Id" class="btn btn-primary my-2">09:00 - 11:00</a></div>
        }

        @if (@item.ElevenToThirteenId == item.AppUserId)
        {
            <div class="col-2"><a asp-controller="Tennis" asp-action="RemoveBooking11To13" asp-route-id="@item.Id" class="btn btn-primary my-2">11:00 - 13:00</a></div>
        }

        @if (@item.ThirteenToFifteenId == item.AppUserId)
        {
            <div class="col-2"><a asp-controller="Tennis" asp-action="RemoveBooking13To15" asp-route-id="@item.Id" class="btn btn-primary my-2">13:00 - 15:00</a></div>
        }

        @if (@item.FifteenToSeventeenId == item.AppUserId)
        {
            <div class="col-2"><a asp-controller="Tennis" asp-action="RemoveBooking15To17" asp-route-id="@item.Id" class="btn btn-primary my-2">15:00 - 17:00</a></div>
        }

        @if (@item.SeventeenToNineteenId == item.AppUserId)
        {
            <div class="col-2"><a asp-controller="Tennis" asp-action="RemoveBooking17To19" asp-route-id="@item.Id" class="btn btn-primary my-2">17:00 - 19:00</a></div>
        }
    </div>
}
